<h1><%= translate_model_name(@questions, count: 2) %> </h1>

<div class="card shadow mb-4">
    
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%= t('message.listing', model: translate_model_name(@questions, count: 2)) %>
            <%= link_to new_admins_backoffice_question_path, class:'btn btn-outline-success' do %>
                <i>Adicionar novo</i>
            <% end %> 
        </h6>
        
    </div>
    <div class="card-body">
        <div class="table-responsive" >
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-10 col-md-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                <thead>
                    <tr role="row">
                        <th rowspan="1" colspan="1"><%= translate_attributes(@questions, :id) %></th>
                        <th rowspan="1" colspan="1"><%= translate_attributes(@questions, :description) %></th>
                        <th rowspan="1" colspan="1"><%= translate_attributes(@questions, :subject) %></th>
                        <th rowspan="1" colspan="1">Editar</th>
                        <th rowspan="1" colspan="1">Visualizar</th>
                        <th rowspan="1" colspan="1">Apagar</th>
                        
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th rowspan="1" colspan="1"><%= translate_attributes(@questions, :id) %></th>
                        <th rowspan="1" colspan="1"><%= translate_attributes(@questions, :description) %></th>
                        <th rowspan="1" colspan="1"><%= translate_attributes(@questions, :subject) %></th>
                        <th rowspan="1" colspan="1">Editar</th>
                        <th rowspan="1" colspan="1">Visualizar</th>
                        <th rowspan="1" colspan="1">Apagar</th>
                </tfoot>
                <tbody>
                    <% @questions.each do |question| %>
                    <tr role="row" class="odd">
                        <td class="sorting_1"><%= question.id %></td>
                        <td><%= question.description.truncate(50) %></td>
                        <td><%= question.subject.description %></td>
                        <td style="width: 100px;">
                              <%= link_to edit_admins_backoffice_question_path(question), class:'btn btn-success btn-circle btn-sm' do %>
                            
                              <i class="fas fa-check"></i>
                            <% end %>
                            </td>
                        
                        <td style="width: 100px;"><button class="btn btn-info btn-circle btn-sm"  ><i class="fas fa-info-circle"></i></button></td>
                        <td style="width: 100px;">
                        <%= link_to admins_backoffice_question_path(question), method: :delete, class:'btn btn-danger btn-circle btn-sm', data: { confirm: 'Deseja excluir o registro?' } do %>
                            
                              <i class="fas fa-trash"></i>
                            <% end %>
                        </td>
                    </tr>    
                    <% end %>
                    
                </tbody>
                
            </table>
        </div>
    </div>
    <%= paginate @questions %>
   
</div>
</div>
        </div>
    </div>
</div>
