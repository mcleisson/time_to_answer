<h1>Administradores </h1>

<div class="card shadow mb-4">
    
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Administradores 
            <%= link_to new_admins_backoffice_admin_path, class:'btn btn-outline-success' do %>
                <i>Adicionar novo</i>
            <% end %> 
        </h6>
        
    </div>
    <div class="card-body">
        <div class="table-responsive" >
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-10 col-md-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                <thead>
                    <tr role="row">
                        <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 268px;">#ID</th>
                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 401px;">Email</th>
                        <th rowspan="1" colspan="1">Editar</th>
                        <th rowspan="1" colspan="1">Visualizar</th>
                        <th rowspan="1" colspan="1">Apagar</th>
                        
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th rowspan="1" colspan="1">#ID</th>
                        <th rowspan="1" colspan="1">E-mail</th>
                        <th rowspan="1" colspan="1">Editar</th>
                        <th rowspan="1" colspan="1">Visualizar</th>
                        <th rowspan="1" colspan="1">Apagar</th>
                </tfoot>
                <tbody>
                    <% @admins.each do |admin| %>
                    <tr role="row" class="odd">
                        <td class="sorting_1"><%= admin.id %></td>
                        <td><%= admin.email %></td>
                        <td style="width: 100px;">
                              <%= link_to edit_admins_backoffice_admin_path(admin), class:'btn btn-success btn-circle btn-sm' do %>
                            
                              <i class="fas fa-check"></i>
                            <% end %>
                            </td>
                        
                        <td style="width: 100px;"><button class="btn btn-info btn-circle btn-sm"  ><i class="fas fa-info-circle"></i></button></td>
                        <td style="width: 100px;">
                        <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:'btn btn-danger btn-circle btn-sm', data: { confirm: 'Deseja excluir o registro?' } do %>
                            
                              <i class="fas fa-trash"></i>
                            <% end %>
                        </td>
                    </tr>    
                    <% end %>
                    
                </tbody>
                
            </table>
        </div>
    </div>
    <%= paginate @admins %>
   
</div>
</div>
        </div>
    </div>
</div>
